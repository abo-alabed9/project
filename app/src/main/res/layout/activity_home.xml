<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Home_Activity">

    <TextView
        android:id="@+id/tv_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_50sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_20ssp"
        android:text="الرئيسية"/>

    <TextView
        android:id="@+id/tv_"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/view"
        app:layout_constraintTop_toBottomOf="@id/tv_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_" />

    <ImageView
        android:id="@+id/img_add_Subject"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_baseline_add_circle_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_home" />

    <ImageView
        android:id="@+id/img_add_Student"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_baseline_add_circle_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_add_Subject" />

    <TextView
        android:id="@+id/tv_add_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="?attr/selectableItemBackground"
        android:text="اضافة مادة"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintStart_toEndOf="@id/img_add_Subject"
        app:layout_constraintTop_toBottomOf="@id/rv_home" />

    <TextView
        android:id="@+id/tv_add_Student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="?attr/selectableItemBackground"
        android:text="اضافة طالب "
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintStart_toEndOf="@id/img_add_Student"
        app:layout_constraintTop_toBottomOf="@id/tv_add_subject" />

    <Button
        android:id="@+id/btn_All_Student"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_42sdp"
        android:background="@drawable/button_view"
        app:layout_constraintTop_toBottomOf="@id/tv_add_Student"
        app:layout_constraintStart_toStartOf="parent"
        android:text="عرض الطلاب"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_14ssp"
        android:layout_marginTop="@dimen/_20sdp"/>


</androidx.constraintlayout.widget.ConstraintLayout>

